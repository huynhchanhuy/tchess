{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/resources/css/register.css" rel="stylesheet" media="screen" />
{% endblock %}

{% block nav_links %}
    <li class="active"><a href="/register">Register</a></li>
    <li><a href="/rooms">Rooms</a></li>
    <li><a href="/practice">Practice</a></li>
{% endblock %}

{% block body %}
    <div class="container">

      <form action="{{ path('register') }}" method="post" {{ form_enctype(form) }} class="form-register" role="form">
        <h2 class="form-register-heading">Please register</h2>
        {{ form_errors(form) }}

        {{ form_errors(form.name) }}
        {{ form_widget(form.name, {'attr': {'placeholder': 'Your name', 'class': 'form-control'} }) }}

        {{ form_rest(form) }}
        <button class="btn btn-lg btn-primary btn-block" type="submit" name="register">Register</button>
      </form>

    </div> <!-- /container -->
{% endblock %}
