{% if paginator.numpages > 1 %}
<nav>
    <ul class="pagination">
        <li><a {% if paginator.currentpage == 1 %}class="disabled"{% endif %} href="{{ path(route, {  'offset': paginator.currentpage - 1 }) }}">&laquo;</a></li>
        {% for i in 1..paginator.numpages %}
            {% if paginator.range.0 > 2 and i == paginator.range.0 %}
                <li class="disabled"><a href="#">...</a></li>
            {% endif %}

            {%  if(i==1 or i==paginator.numpages or i in paginator.range) %}
                {% if i==paginator.currentpage %}
                    <li><a class="active" href="{{ path(route, {  'offset': i })}}">{{i}}</a></li>
                {% else %}
                <li><a href="{{ path(route, {  'offset': i }) }}"> {{i}}</a></li>
                {% endif %}
            {% endif %}

            {% if paginator.range[paginator.midrange -1] < paginator.numpages -1 and i == paginator.range[paginator.midrange-1] %}
                <li class="disabled"><a href="#">...</a></li>
            {% endif %}
        {% endfor %}
        <li><a {% if paginator.currentpage < paginator.numpages %}class="disabled"{% endif %} href="{{ path(route, {  'offset': paginator.currentpage + 1 }) }}">&raquo;</a></li>
    </ul>
</nav>
{% endif %}
